extends base 
block content
    div(class="ui segment")
        form(action="/teacher/sign-up", id="singup-form" method="post" class="ui equal width form"  enctype="multipart/form-data")
            <div class="fields">
                .field
                    label(for="name") Name
                    input(type="text", name="name" placeholder="Name" required)
                .field
                    label(for="email") Email
                    input(type="email", name="email" placeholder="Email" required)
            </div>
            <div class="fields">
                .field
                    label(for="phone") Phone
                    input(type="text", name="phone" placeholder="Phone" required)
                .field
                    label(for="designation") Designation
                    input(type="text", name="designation" placeholder="Designation" required)
                .field
                    label(for="school") School
                    input(type="text", name="school" placeholder="School" required)
            </div>
            <div class="fields">
                .field
                    label(for="password") Password
                    input(type="password", name="password" placeholder="Password" required)
                .field
                    label(for="passwordConfirm") Confirm Password
                    input(type="password", name="passwordConfirm" placeholder="Confirm Password " required)
            </div>
            div(class="fields")
                .field
                    label(for="profile") Profile Picture
                    input(type="file" name="profile" accept="image/*")
            input(class="ui primary button" type="submit", value="Submit")
        
        script(src="/validatejs/signup.js")